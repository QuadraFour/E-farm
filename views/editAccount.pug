  link(rel='stylesheet' type='text/css' href='css/util.css')
  link(rel='stylesheet' type='text/css' href='css/main.css')
  .limiter
    .container-login100()
      .wrap-login100.p-l-110.p-r-110.p-t-62.p-b-33
        form.login100-form.validate-form.flex-sb.flex-w
          span.login100-form-title.p-b-53 Sign Up 
            .p-t-31.p-b-9
              span.txt1 Name
            .wrap-input100.validate-input(data-validate='User Name is required')
              input.input100.updateName(type='text' name='username' value=user.name)
              span.focus-input100
            .container-login100-form-btn.m-t-17
                  button.login100-form-btn.updateNameBtn(type='button') Update Name
            .p-t-13.p-b-9
              span.txt1 Current Password
              .wrap-input100.validate-input(data-validate='Old Password is required')
                input.input100.oldPassUpdate(type='password' name='oldPass' autocomplete='on')
                span.focus-input100
            .p-t-13.p-b-9
              span.txt1 New Password
              .wrap-input100.validate-input(data-validate='New Password is required')
                input.input100.newPassUpdate(type='password' name='newPass' autocomplete='on')
                span.focus-input100
              .p-t-13.p-b-9
                span.txt1 Confirm Password
                .wrap-input100.validate-input(data-validate='Confirm Your Password')
                  input.input100.confirmPassUpdate(type='password' name='ConfirmPass' autocomplete='on')
                  span.focus-input100
                .container-login100-form-btn.m-t-17
                  button.login100-form-btn.updatePassBtn(type='button') Update Password

  #dropDownSelect1

  script(src='vendor/jquery/jquery-3.2.1.min.js')
  script(src='vendor/animsition/js/animsition.min.js')
  script(src='vendor/bootstrap/js/popper.js')
  script(src='vendor/bootstrap/js/bootstrap.min.js')
  script(src='vendor/select2/select2.min.js')
  script(src='vendor/daterangepicker/moment.min.js')
  script(src='vendor/daterangepicker/daterangepicker.js')
  script(src='vendor/countdowntime/countdowntime.js')