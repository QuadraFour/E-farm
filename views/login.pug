  .limiter
    .container-login100()
      h2 
        b Welcome to E-FARM 
        i.fa.fa-address-card-o
      .wrap-login100.p-l-110.p-r-110.p-t-62.p-b-33
        span.login100-form-title.p-b-53.signUpName
          | Sign In 
      
        if(currentUrl=="seller")
          .custom-control.custom-radio
            input#selling-Prod-0.custom-control-input.sellProd(name='selling-Prod' checked='checked' type='radio' data-id="0")
            label.custom-control-label(for='selling-Prod-0') Sell Farm Tools
          .custom-control.custom-radio
              input#selling-Prod-1.custom-control-input.sellProd(name='selling-Prod' checked='checked' type='radio' data-id="1")
              label.custom-control-label(for='selling-Prod-1') Sell Farm Products
        form.login100-form.validate-form.flex-sb.flex-w

          .p-t-31.p-b-9
            span.txt1
              | Email Address
          .wrap-input100.validate-input(data-validate='Email Id is required')
            input.input100(type='text' name='username')
            span.focus-input100
          .p-t-13.p-b-9
            span.txt1
              | Password
            a.txt2.bo1.m-l-5.forgotPass(href='#')
              | Forgot?
          .wrap-input100.validate-input(data-validate='Password is required')
            input.input100(type='password' name='pass')
            span.focus-input100
          .container-login100-form-btn.m-t-17.loginBtn
            button.login100-form-btn
              | Sign In
          .w-full.text-center.p-t-55
            span.txt2
              | Not a member?
            a.txt2.bo1.signupForm(href='')
              | Sign up now
  #dropDownSelect1

  script(src='vendor/jquery/jquery-3.2.1.min.js')
  script(src='vendor/animsition/js/animsition.min.js')
  script(src='vendor/bootstrap/js/popper.js')
  script(src='vendor/bootstrap/js/bootstrap.min.js')
  script(src='vendor/select2/select2.min.js')
  script(src='vendor/daterangepicker/moment.min.js')
  script(src='vendor/daterangepicker/daterangepicker.js')
  script(src='vendor/countdowntime/countdowntime.js')