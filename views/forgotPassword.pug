            span.focus-input100
          .p-t-13.p-b-9
            span.txt1
              | Confirm Password
          .wrap-input100.validate-input(data-validate='Confirm Your Password')
            input.input100.confirmPassReset(type='password' name='confirmPass' data-token =token)
            span.focus-input100
